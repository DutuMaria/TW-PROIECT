<section id="galerie-statica">
    <h2>Galerie</h2>
    <div id="grid-galerie">
        <% for (let imag of locals.imaginiS){  %>
            <figure>
                <picture>
                    <!-- il ia pe primul care se potriveste cu query-ul din media-->
                    <source srcset="/<%-imag.mediu%>" media="(max-width:1200px)"/>
                    <source srcset="/<%-imag.mic%>" media="(max-width:750px)"/>
                    <img src="/<%-imag.mare%>" alt="text"/>
                </picture>
                <figcaption><%-imag.descriere%></figcaption>   
                <!-- pun aici autorul pozei + stilizare -->
            </figure>
        <% } %>
    </div>
</section>